@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="page-header">
        <h2>Login</h2>
    </div>

    <div class="mt-2">
        <form asp-controller="Account" asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Username"></label>
                <input asp-for="@Model.Username" class="form-control" placeholder="AdminSammy" />
                <span asp-validation-for="@Model.Username" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input asp-for="@Model.Password" class="form-control" placeholder="••••••••" />
                <span asp-validation-for="@Model.Password" class="text-danger small"></span>
            </div>
            <div class="form-group pt-2 pb-2">
                <button type="submit" class="btn btn-success w-25">Login</button>
                <button type="reset" class="btn btn-danger w-25 ml-2">Reset</button>
            </div>
        </form>
    </div>
</div>