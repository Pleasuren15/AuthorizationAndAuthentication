@model RegisterViewModel

@{
    ViewData["Title"] = "Add";
}
<div class="container">
    <div class="page-header">
        <h2>Add New Admin</h2>
    </div>

    <form asp-controller="Account" asp-action="Add">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="@Model.Username" class="col-md-2 col-form-label"></label>
            <div class="col-md-6">
                <input asp-for="@Model.Username" class="form-control" placeholder="AdminSammy" />
                <span asp-validation-for="@Model.Username" class="text-danger small"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Email" class="col-md-2 col-form-label"></label>
            <div class="col-md-6">
                <input asp-for="@Model.Email" class="form-control" placeholder="xxxxx@PsDevs.com" />
                <span asp-validation-for="@Model.Email" class="text-danger small"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.PhoneNumber" class="col-md-2 col-form-label"></label>
            <div class="col-md-6">
                <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="xxx xxx xxxx"/>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger small"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Password" class="col-md-2 col-form-label"></label>
            <div class="col-md-6">
                <input asp-for="@Model.Password" class="form-control" value="Secret123#" placeholder="••••••••"/>
                <span asp-validation-for="@Model.Password" class="text-danger small"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.ConfirmPassword" class="col-md-2 col-form-label"></label>
            <div class="col-md-6">
                <input asp-for="@Model.ConfirmPassword" class="form-control" value="Secret123#" placeholder="••••••••"/>
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger small"></span>
            </div>
        </div>
        <div class="form-group pt-2 pb-2">
            <button type="submit" class="btn btn-success w-25">Submit</button>
            <button type="reset" class="btn btn-danger w-25 ml-2">Reset</button>
        </div>
    </form>
</div>